<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
>

    <TextView
        android:text="@string/userNameTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true" 
     />

    <EditText
        android:id="@+id/createTunnelUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tunnel authentication user" />
    
    <TextView
        android:text="@string/hostNameTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true" 
     />

    <EditText
        android:id="@+id/createTunnelHost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tunnel end point host" />

    <TextView
        android:text="@string/portTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true" 
     />

    <EditText
        android:id="@+id/createTunnelPort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="22"
	/>

</LinearLayout>
